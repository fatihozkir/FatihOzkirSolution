@model UserViewModel
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <h4>
                 Last Added Skills
            </h4>
            @{ Html.RenderAction("LastAddedSkills", "Skill");}
        </div>
        <div class="col-md-10">
            <h4>
                Our Last 10 Members
            </h4>
            @foreach (var item in Model.UserList)
            {
                <div class="col-sm-4">
                    <div class="card ">
                        <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
                        <div class="avatar">
                            <img src="https://image.flaticon.com/icons/png/512/306/306473.png" alt=""/>
                        </div>
                        <div class="content">
                            <p>
                                @(item.Name + " " + item.Surname)<br>
                                @item.Username
                            </p>

                            <p>@Html.ActionLink("Details", "UserDetail", "User", new {userId = item.UserId}, new {@class = "btn btn-primary"})</p>
                        </div>
                    </div>
                    <br/>
                </div>
                
                
            }
        </div>
    </div>
</div>

