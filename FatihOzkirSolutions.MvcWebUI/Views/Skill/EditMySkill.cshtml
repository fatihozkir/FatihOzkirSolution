@model UserSkill
@{
    ViewBag.Title = "EditMySkill";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<h2>Edit My Skill</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Skill List</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    if (TempData["Error"] != null)
                    {
                        <div class="alert alert-info">@TempData["Error"]</div>
                    }
                    <table class="table table-bordered table-hover">
                        <tr>
                            <td>Skill:</td>
                            <td>
                                @Model.Skill.SkillHeader
                                @Html.HiddenFor(x=>x.SkillId)
                                @Html.HiddenFor(x=>x.UserSkillId)
                                @Html.HiddenFor(x=>x.UserId)
                            </td>
                        </tr>
                        <tr>
                            <td>Profiency Level</td>
                            <td>
                                @Html.DropDownListFor(x => x.Rate, new SelectListItem[]
                                {
                                    new SelectListItem() {Text = "Beginner", Value = "1"},
                                    new SelectListItem() {Text = "Pre-Intermediate", Value = "2"},
                                    new SelectListItem() {Text = "Indermediate", Value = "3"},
                                    new SelectListItem() {Text = "upper-intermediate", Value = "4"},
                                    new SelectListItem() {Text = "Expert", Value = "5"}
                                }, new {@class = "form-control"}
                                    )
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>
                                <button type="submit" class="btn btn-primary">Update</button>
                            </td>
                        </tr>
                        @if (TempData["Exception"] != null)
                        {
                            <tr>
                                <td>&nbsp;</td>
                                <td>
                                    <div class="alert alert-success">@TempData["Exception"]</div>
                                </td>
                            </tr>
                        }
                    </table>
                }

            </div>
        </div>
    </div>

</div>