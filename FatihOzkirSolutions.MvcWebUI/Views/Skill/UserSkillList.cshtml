@model UserSkillRateViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">My Skill List</h3>
            </div>
            <div class="panel-body">

                @if (Model.SkillRateList.Count > 0)
                {

                    <ul class="list-group" id="skillList">
                        @foreach (var item in Model.SkillRateList)
                        {
                            <li class="list-group-item" >
                                <a href="/Skill/EditMySkill?skillId=@item.skill.SkillId" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-edit"></span></a>
                                <a href="/Skill/DeleteSkill?skillId=@item.skill.SkillId" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span></a>
                                @item.skill.SkillHeader&nbsp;&nbsp;
                                @for (int i = 0; i < item.Rate; i++)
                                {
                                    <span class="glyphicon glyphicon-star"></span>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="alert alert-info">This User Did Not Add A Skill Yet.</div>
                }
            </div>
        </div>
    </div>

</div>
@Scripts.Render("~/js/pagerScripts")